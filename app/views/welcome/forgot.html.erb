<%= form_for @user, url: {controller: 'welcome', action: 'forgot_send', method: 'post'}, html: {class: 'form-signin form-horizontal'} do |f| %>
  <div class="well">
	<h2 class="form-signin-heading">Reset my password</h2>
	<div class="form-group <%=has_error(:email,@user.errors)%>">
	  <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
	  <div class="col-sm-10">
		<%=f.text_field :email, :class=>"form-control", :placeholder=>"Email", :type=>"email"%>
		<span class="help-block"><%=has_error_text(:email,@user.errors)%></span>
	  </div>
	</div>
	<button class="btn btn-lg btn-primary btn-block" type="submit">Reset</button>
  </div>
  <%=link_to "Login", welcome_login_url()%><br>
<%end%>