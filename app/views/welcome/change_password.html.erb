<%= form_for @user, url: {controller: 'welcome', action: 'change_password'}, html: {class: 'form-signin form-horizontal'} do |f| %>

  <div class="well">
	<h2 class="form-signin-heading">Change password</h2>

	<%= f.hidden_field :reset_token, :value => @user.reset_token %>

	<div class="form-group <%=has_error(:password,@user.errors)%>">
	  <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
	  <div class="col-sm-10">
		<%=f.password_field :password, :class=>"form-control", :placeholder=>"Password", :type=>"password"%>
		<span class="help-block"><%=has_error_text(:password,@user.errors)%></span>
	  </div>
	</div>

	<div class="form-group <%=has_error(:password_confirmation,@user.errors)%>">
	  <label for="inputPassword3" class="col-sm-2 control-label">Repeat password</label>
	  <div class="col-sm-10">
		<%=f.password_field :password_confirmation, :class=>"form-control", :placeholder=>"Repeat password", :type=>"password"%>
		<span class="help-block"><%=has_error_text(:password_confirmation,@user.errors)%></span>
	  </div>
	</div>
	<%=f.submit "Change password",  class: 'btn btn-lg btn-primary btn-block'%>
  </div>
<%end%>